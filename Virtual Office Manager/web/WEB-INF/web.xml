<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>LoginValidate</servlet-name>
        <servlet-class>admin.LoginValidate</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CompanyRegister</servlet-name>
        <servlet-class>admin.CompanyRegister</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddEmployee</servlet-name>
        <servlet-class>admin.AddEmployee</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateDeleteEmp</servlet-name>
        <servlet-class>admin.UpdateDeleteEmp</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BlockUnblock</servlet-name>
        <servlet-class>admin.BlockUnblock</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AChangePassword</servlet-name>
        <servlet-class>admin.AChangePassword</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateEmployee</servlet-name>
        <servlet-class>employee.UpdateEmployee</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>admin.Logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddAttendance</servlet-name>
        <servlet-class>employee.AddAttendance</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EmpChangePassword</servlet-name>
        <servlet-class>employee.EmpChangePassword</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EmployeeAttendance</servlet-name>
        <servlet-class>admin.EmployeeAttendance</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginValidate</servlet-name>
        <url-pattern>/LoginValidate</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CompanyRegister</servlet-name>
        <url-pattern>/CompanyRegister</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddEmployee</servlet-name>
        <url-pattern>/AddEmployee</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateDeleteEmp</servlet-name>
        <url-pattern>/UpdateDeleteEmp</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BlockUnblock</servlet-name>
        <url-pattern>/BlockUnblock</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AChangePassword</servlet-name>
        <url-pattern>/AChangePassword</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateEmployee</servlet-name>
        <url-pattern>/UpdateEmployee</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/Logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddAttendance</servlet-name>
        <url-pattern>/AddAttendance</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EmpChangePassword</servlet-name>
        <url-pattern>/EmpChangePassword</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EmployeeAttendance</servlet-name>
        <url-pattern>/EmployeeAttendance</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
